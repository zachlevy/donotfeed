{
  "manifest_version": 2,

  "name": "Do Not Feed Facebook",
  "description": "Choose whether Facebook tracks links you click on in your news feed.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {                    // optional
      "19": "images/icon_x19.png",           // optional
      "38": "images/icon_x38.png"            // optional
    },
    "default_title": "Do Not Feed",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
  },

  "content_scripts": [ {
    "js": [ "jquery.min.js", "background.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],

  "permissions": [
    "downloads",
    "https://facebook.com/",
    "<all_urls>"
  ]
}
